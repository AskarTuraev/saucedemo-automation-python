{
  "name": "code-reviewer-local",
  "displayName": "Local Code Reviewer",
  "description": "Local extension to invoke AI Code Reviewer script",
  "version": "0.0.1",
  "publisher": "local",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:reviewer.reviewSelection"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "reviewer.reviewSelection",
        "title": "Local Code Reviewer"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "reviewer.reviewSelection",
          "group": "1_modification",
          "when": "editorHasSelection"
        }
      ]
    }
  }
}