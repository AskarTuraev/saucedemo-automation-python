{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Local Code Reviewer",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/code_reviewer/reviewer.py",
                "--file",
                "${file}",
                "--start",
                "${selectionStartLineNumber}",
                "--end",
                "${selectionEndLineNumber}"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "focus": true
            },
            "group": {
                "kind": "test",
                "isDefault": false
            }
        }
    ]
}
